<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="20dp"
            android:id="@+id/tv_idphieumuon"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Tên phiếu mượn"
            android:textSize="20dp"
            android:id="@+id/tv_tenphieumuon"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/suadoi"
            android:id="@+id/img_suaphieumuon"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/delete"
            android:id="@+id/img_xoaphieumuon"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Ngày mượn"
            android:id="@+id/tv_ngaymuon"/>
        <TextView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Giá"
            android:id="@+id/tv_giaphieumuon"/>
    </LinearLayout>
</LinearLayout>